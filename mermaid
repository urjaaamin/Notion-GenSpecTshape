  style g3 s3 t3 fill:#9f9,stroke:#333,stroke-width:2px;
  style g4 s4 t4 fill:#9f9,stroke:#333,stroke-width:2px;
  style c1 c2 c3 fill:#9f9,stroke:#333,stroke-width:2px;

